    "actions": [
        "fetch_joke",
        "fetch_news",
        "fetch_book",
        "fetch_book_category"
    ],
    "skills": [
        {
            "description": "Ask Concierge for a joke",
            "intent": "ask_joke",
            "actions": [
                "fetch_joke"
            ]
        },
        {
            "description":"Ask Concierge for the news about a topic of choice",
            "intent": "ask_news",
            "actions":[
                "fetch_news"
            ]
        },
        {
            "description":"Ask Concierge to read or provide information about a book matching a given search term",
            "intent": "ask_book",
            "actions":[
                "fetch_book"
            ]
        },
        {
