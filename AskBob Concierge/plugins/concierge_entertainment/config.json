{
    "plugin": "concierge_entertainment",
    "entities": [
        "joke_category",
        "news_search_term",
        "book_search_term",
        "book_category"
    ],
    "regexes": [
        {
            "regex_id": "news_search_term",
            "examples":[
                "(?:[A-Za-z]+ ){0,2}[A-Za-z]+"
            ]
        },
        {
            "regex_id": "book_search_term",
            "examples":[
                "(?:[A-Za-z]+ ){0,4}[A-Za-z]+"
            ]
        } 
    ],
    "lookups": [
        {
            "lookup_id": "joke_category",
            "examples": [
                "computer",
                "animal",
                "doctor",
                "food",
                "science",
                "knock knock",
                "airplane"
            ]
        },
        {
            "lookup_id": "book_category",
            "examples": [
                "horror",
                "fantasy",
                "love",
                "mystery",
                "science fiction",
                "classic",
                "romance"
            ]
        }
    ],
    
    "intents": [
        {
            "intent_id": "ask_joke",
            "examples":[
                "Tell me a funny joke",
                "Tell me a [knock knock](joke_category) joke please",
                "Give me a [science](joke_category) joke",
